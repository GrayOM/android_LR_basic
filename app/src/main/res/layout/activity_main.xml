<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 첫 번째 텍스트: 환영 메시지 -->

    <TextView
        android:id="@+id/main_text"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="32dp"
        android:rotationX="0"
        android:text="안녕하세요 !"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <!-- 두 번째 텍스트: 소개 메시지 -->

    <!-- GitHub 링크 -->

    <!-- 블로그 링크 -->

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="52dp"
        android:layout_height="51dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="@+id/blog_link"
        app:layout_constraintStart_toStartOf="@+id/blog_link"
        app:layout_constraintTop_toBottomOf="@+id/blog_link"
        app:srcCompat="@android:drawable/ic_secure" />

    <TextView
        android:id="@+id/blog_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:text="https://grayom.tistory.com"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/github_link"
        app:layout_constraintStart_toStartOf="@+id/github_link"
        app:layout_constraintTop_toBottomOf="@+id/github_link" />

    <TextView
        android:id="@+id/sub_text"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="150dp"
        android:text="저는 GrayOM 입니다."
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/main_text"
        app:layout_constraintStart_toStartOf="@+id/main_text"
        app:layout_constraintTop_toBottomOf="@+id/main_text" />

    <TextView
        android:id="@+id/github_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:text="https://github.com/GrayOM"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/blog_link"
        app:layout_constraintEnd_toEndOf="@+id/sub_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sub_text"
        app:layout_constraintTop_toBottomOf="@+id/sub_text" />

    <!-- 이미지 예시 (추가) -->
    <!-- 필요시 이미지 추가 가능 -->
